module DCounterAsyn_tb;
  parameter N = 2;
  reg clk;
  reg rst;
  wire [N-1:0] count;

  DCounterAsyn #(.N(N)) dut (
    .clk(clk),
    .rst(rst),
    .count(count)
  );

  initial begin
    clk = 0;
    rst = 1;
    #10 rst = 0; // Activar el reset asíncrono
    #10 rst = 1; // Desactivar el reset asíncrono

    repeat (100) begin
      #5 clk = ~clk;
    end

    #10 $finish;
  end
  
  always @(posedge clk) begin
    $display("count = %d", count);
  end

endmodule
